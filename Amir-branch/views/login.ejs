                <div class="button-box">
                    <h1 class="toggle-btn">Log In</h1>
                </div>

                <ul style="list-style-type: none; color: green; font-size: 20px;
                font-weight: 600;">
                    <% if(messages.succes_msg) { %> 
                        <li><%= messages.succes_msg %></li>
                    <% } %>
                </ul>
            
                <ul style="list-style-type: none; color: red; font-size: 20px;
                font-weight: 600;">
                    <% if(messages.error){%>
                        <li><%= messages.error %></li>
                    <% } %>
                </ul>

                <form id="login" action="/users/login" method="POST" class="input-group">
                    <input type="email" id="email" name="email" class="input-field" placeholder="Email" required>
                    <input type="password" id="password" name="password" class="input-field" placeholder="Password" required>
                    <input type="checkbox" class="check-box" style="margin: 3px 5px 15px 0;"><span style="position: static;">Remember password</span>
                    <button type="submit" value="Login" class="submit-btn" style="border-radius: 30px; margin: auto;">Log in</button>
                    <a href="/users/register" style="margin-top: 10px; color: red;" >Register</a>
                </form>
            </div>
